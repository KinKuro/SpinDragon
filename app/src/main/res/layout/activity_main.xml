<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studies.kinkuro.spindragon.MainActivity"
    android:background="@drawable/back_05"
    android:id="@+id/layout_background">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/btn_select_gamestart"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_exit"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="clickStart"/>

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/btn_select_gameexit"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:onClick="clickExit"/>

</RelativeLayout>
